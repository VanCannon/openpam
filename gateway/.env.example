# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=openpam
DB_PASSWORD=openpam
DB_NAME=openpam
DB_SSLMODE=disable

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Development Mode (bypasses EntraID and Vault authentication)
# WARNING: Never enable in production!
DEV_MODE=false

# EntraID/Azure AD Configuration
ENTRA_TENANT_ID=your-tenant-id-here
ENTRA_CLIENT_ID=your-client-id-here
ENTRA_CLIENT_SECRET=your-client-secret-here
ENTRA_REDIRECT_URL=http://localhost:8080/api/v1/auth/callback

# HashiCorp Vault Configuration
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-root-token
VAULT_ROLE_ID=
VAULT_SECRET_ID=

# Session Configuration
SESSION_SECRET=change-me-in-production-use-long-random-string
SESSION_TIMEOUT=3600s

# Zone Configuration
ZONE_TYPE=hub
ZONE_NAME=headquarters
ZONE_ID=
HUB_ADDRESS=

# For Satellite Mode:
# ZONE_TYPE=satellite
# ZONE_NAME=branch-office
# ZONE_ID=your-zone-uuid-from-database
# HUB_ADDRESS=wss://hub.example.com/api/tunnel

# Protocol Handlers
GUACD_ADDRESS=localhost:4822
RECORDINGS_PATH=./recordings
